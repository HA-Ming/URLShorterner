{
    "manifest_version": 2,
    "name": "URL Shortener",
    "version": "1.0",
    "description": "Shorten URLs using Bitly",
    "browser_action": {
      "options_page": "options.html",
      "default_popup": "popup.html",
      "default_icon": {
        "128": "images/icon128.png"
      }
    },
    "permissions": ["storage", "activeTab", "https://api-ssl.bitly.com/*"]
  }
  